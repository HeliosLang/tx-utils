        "prettier": "^3.2.5",
        "typescript": "^5.4.4"
    },
    "dependencies": {
        "@helios-lang/codec-utils": "^0.1.33",
        "@helios-lang/crypto": "^0.1.9",
        "@helios-lang/ledger": "^0.4.8",
